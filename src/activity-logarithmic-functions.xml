                        <static>8</static>
                    </var>
                    <pg-code>
                        $a=random(2,4,1);
                        do{$b=random(3,5,1)}until($a!=$b and $a**$b&lt;100);
                        if($envir{problemSeed}==1){$a=2;$b=3;};
