                  <cell><m>x</m></cell>
                  <cell><m>g(x)</m></cell>
                </row>
                <row>
                  <cell><m><var name="$xx[0]" /></m></cell>
                  <cell><m><var name="$yy[0]" /></m></cell>
                </row>
                <row>
                  <cell><m><var name="$xx[1]" /></m></cell>
                  <cell><m><var name="$yy[1]" /></m></cell>
