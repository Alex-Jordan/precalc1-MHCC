  <title>Activity Piecewise Defined Functions</title>

  <subsection>
      <title>Piecewise Defined Functions</title>

   <exercise>
       <webwork>
           <pg-macros>
             <macro-file>parserImplicitPlane.pl</macro-file>
           </pg-macros>
           <setup>
               <var name="$lineA">
                   <static>y=3x-1</static>
               </var>
               
               <pg-code>
                    Context()->variables->are(x=>'Real',y=>'Real');
                   $lineA = ImplicitPlane("y=3x-1");
               </pg-code>
           </setup>

           <statement>
               <p>this is line A <var name="$lineA" width="15" /></p>
           </statement>
       </webwork>
   </exercise>
